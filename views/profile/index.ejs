<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/show.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title></title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <hr>
    <div id="userHeader">
            <% if (!userAbout) {%>
        <h1 class="titleCard">
            Your <em>Folio</em>, <%= user.username %> 
        </h1>
            <% } else {%>
                <h1 class="titleCard"> 
                    Your <em>Folio</em>, <%= userAbout.name %>    
                </h1>
            <div class="aboutUser">
                    <p id="contacts" class="about">
                        Contacts: <%= userAbout.contacts%>
                    </p>
                    <p id="website" class="about">
                        Website: 
                        <a href="<%= userAbout.website %>">
                            <%= userAbout.website%>
                        </a>
                    </p>
                    <p id="mainMedium" class="about">
                        Main Medium: <%= userAbout.mainMedium%>
                    </p>
                    <div class="bio-container">
                        <p id="bio" class="about">
                            Bio: <%= userAbout.bio%>
                        </p>
                    </div>
                <% } %>
            </div>
    </div>
    <a id="editProfile" class="profileButtons" href="/profile/<%= user._id%>/edit">Edit Profile</a>
    <Article id="home-container">
        <hr />
        <h1>Your Library</h1>
        <a id="addWorks" class="profileButtons" href="/library/new">Add Works</a>
        <div id="display-container">
            <% if (artworks.length) { %>
                <% artworks.forEach((artwork) => { %>
                    <div class="home-artwork">
                        <a class="artimage" href="/library/<%= artwork._id %>">
                            <p> 
                                <img src="<%= artwork.artwork %>">
                                <div>
                                    Title: <%= artwork.title %>
                                </div>   
                            </p>
                        </a>
    
                    </div>
                <% }) %>
            <% } %>
        </div>
    </Article>
</body>
</html>